<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql"/>
    <changeSet id="03-create-transaction-schema" author="ume">
        <createTable tableName="TRANSACTION" remarks="PIX transaction info">
            <column name="ID" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="EXTERNAL_ID" type="SERIAL">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="CURRENCY">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PARTNER_EXTERNAL_ID" type="VARCHAR(255)"/>
            <column name="PIX_TXID" type="VARCHAR(255)"/>
            <column name="BRCODE" type="VARCHAR(550)"/>
            <column name="STATUS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TRANSACTION_BENEFICIARY_ID" type="${uuid_type}">
                <constraints 
                    foreignKeyName="FK_TRANSACTION_BENEFICIARY"
                    references="TRANSACTION_BENEFICIARY(ID)"
                />
            </column>
            <column name="TRANSACTION_ORIGIN_ID" type="${uuid_type}">
                <constraints
                    foreignKeyName="FK_TRANSACTION_ORIGIN"
                    references="TRANSACTION_ORIGIN(ID)"
                />
            </column>
            <column name="CREATION_TIMESTAMP" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATE_TIMESTAMP" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="external_id_index_on_transaction" tableName="TRANSACTION">
            <column name="PARTNER_EXTERNAL_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>